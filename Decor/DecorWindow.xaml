<Window x:Class="Decor.DecorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Decor"
        mc:Ignorable="d"
        Title="Декор" MinHeight="600" MinWidth="800"
        Height="600" Width="800"
        FontFamily="Candara">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Image HorizontalAlignment="Left" Source="/Resources/logo.png" Width="200" />
        <Button x:Name="btnGoBack" Content="&lt;" Click="btnGoBack_Click" HorizontalAlignment="Right" Visibility="Hidden"/>
        <TextBlock x:Name="tbTitle" HorizontalAlignment="Center" FontSize="25"/>

        <Frame x:Name="frmMain" NavigationUIVisibility="Hidden" Grid.Row="1"/>

    </Grid>
</Window>
